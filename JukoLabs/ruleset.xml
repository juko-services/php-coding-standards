<?xml version="1.0"?>
<ruleset name="Juko Labs">
	<description>PHP ruleset used to build WordPress applications.</description>

	<!-- Exclude NPM and Composer package directories. -->
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>

	<!-- No need to sniff CSS, JS or minified files. -->
	<exclude-pattern>*\.(css|js|min)</exclude-pattern>

	<!-- Use WordPress code documentation standards. -->
	<rule ref="WordPress-Docs" />

	<!-- Use WordPress code standards, with a little extra. -->
	<rule ref="WordPress-Extra"/>

	<!-- Other generic standards we prefer. -->
	<rule ref="Generic.CodeAnalysis.UnusedFunctionParameter"/>
	<rule ref="Generic.Commenting.Todo"/>

	<!-- Set the minimum supported WP version to 5.4. -->
	<config name="minimum_supported_wp_version" value="5.4" />

	<!-- PHP version check, specific for WordPress. -->
	<config name="testVersion" value="7.4-"/>
	<rule ref="PHPCompatibilityWP" />

</ruleset>
